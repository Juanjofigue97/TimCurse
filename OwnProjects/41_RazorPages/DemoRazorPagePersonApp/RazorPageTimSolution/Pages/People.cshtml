@page
@model RazorPageTimSolution.Pages.PeopleModel
@{
    ViewData["Title"] = "People";
}

<h1>People</h1>

<form method="post">
    <div class="form-group">
        <label class="col-form-label" asp-for="Person.FirstName"></label>
        <input type="text" asp-for="Person.FirstName" placeholder="First Name"/>
    </div>
    <div class="form-group">
        <label asp-for="Person.LastName"></label>
        <input type="text" asp-for="Person.LastName" placeholder="Last Name" />
    </div>
    <div class="form-group">
        <label asp-for="Person.Age"></label>
        <input type="number" asp-for="Person.Age" placeholder="Age" />
    </div>
    <button type="submit" class="btn btn-light">Submit</button>
</form>