@page "/"

<PageTitle>This is my Page Title text.</PageTitle>

<HeadContent>
    <meta name="description" content="@metaDescription" />

</HeadContent>



<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />
<button class="btn btn-primary" @onclick="UpdateMetaInfo">Update Meta Info</button>

@code {
    private int count = 0;
    private string metaDescription = "This is my initial Description";

    private void UpdateMetaInfo()
    {
        metaDescription = $"The new desccription includes the number {count++}";
    }
}