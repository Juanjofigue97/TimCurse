@page "/sampleform"
<h3>SampleForm</h3>
<EditForm Model="@sample">
    <div class="form-group row mb-3">
        <label for="firstName" class="col-sm-2 col-form-label">
            Simple Password
        </label>
        <div class="col-sm-10">
            <InputText id="SimplePassword" class="form-control" placeholder="Simple Password"
                       type="password"
                       @bind-Value="sample.SamplePassword" />
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="firstName" class="col-sm-2 col-form-label">
            SampleInt
        </label>
        <div class="col-sm-10">
            <InputNumber id="SampleInt" class="form-control" placeholder="Sample Int"
                         @bind-Value="sample.SampleInt" />
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="firstName" class="col-sm-2 col-form-label">
            Sample Double
        </label>
        <div class="col-sm-10">
            <InputNumber id="SampleInt" class="form-control" placeholder="Sample Double"
                         @bind-Value="sample.SampleDouble" />
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="mb-3 form-check">
            <label class="form-check-label" for="exampleCheck1">Sample Bool</label>
            <InputCheckbox id="SampleInt" class="form-check-input" placeholder="Sample Bool"
                           @bind-Value="sample.SampleBool" />
        </div>
    </div>
    <div class="form-group row mb-3">

        <label for="firstName" class="col-sm-2 col-form-label">
            Sample DateTime
        </label>
        <div class="col-sm-10">
            <InputDate id="SampleInt" class="form-control" placeholder="Sample DateTime"
                       @bind-Value="sample.SampleDateTime" />
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="firstName" class="col-sm-2 col-form-label">
            Sample DateTime
        </label>
        <div class="col-sm-10">
            <InputSelect @bind-Value="sample.DropDownValue" TValue="int" class="form-select">
                <option value="">Select Item ...</option>
                <option value="1">Simple Option</option>
                <option value="2">Complex Option</option>
                <option value="2">Very ComplexOption</option>
            </InputSelect>
        </div>
    </div>

</EditForm>


@code {
    private SampleModel sample = new SampleModel();

}
